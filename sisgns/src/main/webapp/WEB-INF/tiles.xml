<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <definition name="principal" template="/WEB-INF/template/sistema/base.jsp">
        <put-attribute name="header" value=""/>
        <put-attribute name="conteudo" value=""/>
    </definition>

    <definition name="index-template" extends="principal">
        <put-attribute name="header" value="/WEB-INF/breadcump/principal.jsp"/>
        <put-attribute name="conteudo" value=""/>
    </definition>

    <definition name="administradora/index-template" extends="principal">
        <put-attribute name="header" value="/WEB-INF/breadcump/administradora/index.jsp"/>
        <put-attribute name="conteudo" value="/WEB-INF/template/administradora/index.jsp"/>
    </definition>

    <definition name="administradora/search-template" extends="administradora/index-template"/>

    <definition name="administradora/formulario-template" extends="principal">
        <put-attribute name="header" value="/WEB-INF/breadcump/administradora/formulario.jsp"/>
        <put-attribute name="conteudo" value="/WEB-INF/template/administradora/formulario.jsp"/>
    </definition>

    <definition name="administradora/*/show-template" extends="administradora/formulario-template"/>

    <definition name="operadora/index-template" extends="principal">
        <put-attribute name="header" value="/WEB-INF/breadcump/operadora/index.jsp"/>
        <put-attribute name="conteudo" value="/WEB-INF/template/operadora/index.jsp"/>
    </definition>

    <definition name="operadora/search-template" extends="operadora/index-template"/>

    <definition name="operadora/formulario-template" extends="principal">
        <put-attribute name="header" value="/WEB-INF/breadcump/operadora/formulario.jsp"/>
        <put-attribute name="conteudo" value="/WEB-INF/template/operadora/formulario.jsp"/>
    </definition>

    <definition name="operadora/*/show-template" extends="operadora/formulario-template"/>

</tiles-definitions>